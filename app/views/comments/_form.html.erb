<%= form_with(model: @comment, local: true) do |form| %>

	<% if @comment.errors.any? %>
		<div id="error_explanation">
			<h2><%= pluralize(@comment.errors.count, "error") %>
				prohibited this blog post from being saved:</h2>
				<ul>
					<% @comment.errors.full_messages.each do |message| %>
						<li> <%= message %> </li>
					<% end %>
				</ul>
		</div>
	<% end %>

		<%= form.hidden_field :blog_post_id, value: @blog_post.id %>

	<div class="form-group">
		<%= form.text_field :author, class: "form-control", placeholder: "Your name here..." %>
	</div>
		<div class="form-group">
		<%= form.text_area :comment_entry, class: "form-control", rows: 4, placeholder: "Enter Comment Here..." %>
	</div>
	<div class="actions">
		<%= form.submit "Set Comment", class: "btn btn-primary" %>
	</div>

<% end %>